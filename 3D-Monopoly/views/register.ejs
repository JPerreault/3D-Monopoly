 <script src="/javascripts/validation.js"></script>

 <div id="main_content">

  <div id="middle_banner">
   <div class="middle_banner_content">
   </div>
  </div>

   <div class="registration_form">
    <h1>Registration</h1>
    <form name="registration_form" id="registration_form" action="/register" onsubmit="return validateForm(this);" method="post">
     <div class="login_row">
      Username: <span class="star">*</span> <input required type="text" id="username" name="username" />
     </div>
     <div class="login_row">
      Password: <span class="star">*</span> <input required type="password" id="userpass" name="userpass" />
     </div>
     <div class="login_row">
      Confirm Password: <span class="star">*</span> <input required type="password" id="password_repeat" name="password_repeat" />
     </div>
     <div class="login_row">
      Email Address:<span class="star">*</span> <input required type="text" id="useremail" name="useremail" />
     </div>
     <div class="login_row">
      Confirm Email Address:<span class="star">*</span> <input required type=""text" id="useremail_repeat" name="useremail_repeat" />
     </div>
     <div class="login_row">
       Select a security question:<span class="star">*</span> <select id="securityquestion" name="userquestion">
       <option value="0"></option>
       <option value="1">Name of your first pet?</option>
       <option value="2">Mother's maiden name?</option>
       <option value="3">Name of hometown/city?</option>
       <option value="4">Name of your high school?</option>
       </select>
       </div>
       <div class="login_row">
       Answer the security question:<span class="star">*</span> <input required type="text" id="useranswer" name="useranswer" />
       </div>
     <div class="login_row">
      <button class="submission" required type="submit" value="Register">Register</button>
     </div>
 </div>
 </form>
 </div>
 <div id="footer" />
 </div>